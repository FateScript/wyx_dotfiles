! true transparent
URxvt.depth: 32
URxvt.background: rgba:1111/1111/1111/cccc

URxvt*geometry: 80x30
URxvt*borderLess: true
URxvt.scrollBar: false
! Use shift to scroll
URxvt.secondaryScroll: True

URxvt*lineSpace: 0
URxvt*foreground: #FFFFFF
URxvt*cursorBlink: true
URxvt*pointerBlank: true
URxvt*visualBell: false
URxvt*urgentOnBell: true

! Jump when receiving new line
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeyPress: true
URxvt*scrollWithBuffer: false
URxvt*jumpScroll: true
! refresh once in a while when receiving too many lines
URxvt*skipScroll: true

URxvt*termName: rxvt-256color
URxvt*tripleclickwords: true
URxvt*saveLines: 10000
URxvt*insecure: true

URxvt.font: xft:WenQuanYi Micro Hei Mono-11x23:antialias=false
URxvt.boldfont: xft:Dejavu Sans Mono-12:bold,xft:WenQuanYi Micro Hei-12:bold
URxvt*buffered: true
URxvt.letterSpace: -2
! font settings suggested by infinality
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb


! With ibus:
URxvt.inputMethod: ibus
Urxvt.preeditType: OverTheSpot

! Utils:
#ifndef URXVT_PERL_LIB
#define URXVT_PERL_LIB /home/wyx/.urxvt/perl/
#endif
URxvt.perl-lib: URXVT_PERL_LIB
!URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,tabbedex
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.perl-ext:matcher,selection,selection-popup,selection-autotransform,searchable-scrollback,readline,selection-pastebin,-option-popup

URxvt.matcher.button: 1
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
!URxvt.keysym.M-Escape:      perl:keyboard-select:activate
!URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-bg: 6
URxvt.tabbed.tab-fg: 0
!URxvt.keysym.C-t: perl:tabbedex:new_tab
!URxvt.keysym.M-l: perl:tabbedex:next_tab
!URxvt.keysym.M-h: perl:tabbedex:prev_tab
URxvt.tabbed.no-tabbedex-keys: true

URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste

! Color
URxvt*colorUL: #00ff5f
URxvt*cursorColor: #4a54A3
!black
!*color0, 8
!red
!*color1, 9
!green
!*color2, 10
!yellow
!*color3, 11
!blue, the dark(pure) blue is too dim
*color4:  #2277cc
*color12: #2277cc
!magenta
!*color5, 13
!cyan
!*color6, 14
!!white
!*color7, 15
