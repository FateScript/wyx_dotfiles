update_interval 2
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes

# fonts
use_xft yes
text_buffer_size 2048
xftfont black:size=11
xftalpha 0.7
font arial black:size=8
uppercase no
use_spacer none

# apperances
draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
border_width 0
default_color grey
own_window_colour white

no_buffers yes
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes

# position
alignment top_left
gap_x 255
gap_y 40
top_name_width 30

TEXT
${execpi 300 gcalcli --conky --color_owner=magenta agenda '12am' $(date --date="2 day" +"%Y%m%d") }
